<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    tools:context=".ui.dashboard.DashboardFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:src="@drawable/logobrain"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:text="@string/question1"
        />

    <EditText
        android:id="@+id/et_pill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_title"
        android:inputType="text"
        android:minHeight="48dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:text="@string/question2"
        />

    
    <RadioGroup
        android:id="@+id/rg_dias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <RadioButton
            android:id="@+id/rb_day1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/day1"
            />
        <RadioButton
            android:id="@+id/rb_day2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/day2"
            />
        <RadioButton
            android:id="@+id/rb_day3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/day3"
            />
        <RadioButton
            android:id="@+id/rb_day4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/day4"
            />
        <RadioButton
            android:id="@+id/rb_day5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/day5"
            />
        <RadioButton
            android:id="@+id/rb_day6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/day6"
            />
        <RadioButton
            android:id="@+id/rb_day7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/day7"
            />

    </RadioGroup>


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/question3"
        android:textSize="20sp"
        android:textColor="@color/colorAccent"/>



    <Button
        android:id="@+id/btnTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time"
        android:textColor="@color/gray"
        android:background="?android:attr/selectableItemBackground"/>

    <Button
        android:id="@+id/btnDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:background="@drawable/fondo"
        />



</LinearLayout>